@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model cuong.Controllers.AdminController.CategoryView;

<form action="/admin/saveCategory" method="post">
    <div class="form-group">
        <input name="id" type="hidden" class="form-control" id="IDInput" value="@Model.getCategoryDTO().Id">
    </div>
    <div class="form-group">
        <label for="nameInput">Name of new category</label>
        <input type="text" class="form-control" name="name" id="nameInput" placeholder="" value="@Model.getCategoryDTO().Name">
    </div>
    <div class="descriptionInput">
        <label for="descriptionInput">Description</label>
        <input type="text" class="form-control" name="description" id="descriptionInput"placeholder="" value="@Model.getCategoryDTO().Description">
    </div>
    <br>

    <button type="submit" class="btn btn-primary btn-icon-split btn-md">
        <span class="icon text-white-30">
            <i class="fas fa-plus"></i>
        </span>
        <span class="text">Update</span>
    </button>
    <a href="/admin/categories" class="btn btn-secondary btn-icon-split btn-md">
        <span class="icon text-white-30">
            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="text">Back</span>
    </a>
</form>