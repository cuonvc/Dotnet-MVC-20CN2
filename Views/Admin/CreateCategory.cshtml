@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form action="/admin/saveCategory" method="post">
    <div class="form-group">
        <label for="nameInput">Name of new category</label>
        <input type="text" class="form-control" name="name" id="nameInput" placeholder="Please enter 
     name of the new category">
    </div>
    <div class="descriptionInput">
        <label for="descriptionInput">Description</label>
        <input type="text" class="form-control" name="description" id="descriptionInput"placeholder="Please 
     enter descriptions">
    </div>
    <br>
  
    <button type="submit" class="btn btn-primary btn-icon-split btn-md">
        <span class="icon text-white-30">
            <i class="fas fa-plus"></i>
        </span>
        <span class="text">Create New Category</span>
    </button>
    <a href="/admin/categories" class="btn btn-secondary btn-icon-split btn-md">
        <span class="icon text-white-30">
            <i class="fas fa-arrow-left"></i>
        </span>
        <span class="text">Back</span>
    </a>
</form>